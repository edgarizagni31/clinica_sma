---
import { FaBars } from 'react-icons/fa';
import Sidebar from '../components/layout/Sidebar.astro';

export interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang='es' data-theme='light'>
	<head>
		<meta charset='UTF-8' />
		<meta name='description' content='Astro description' />
		<meta name='viewport' content='width=device-width' />
		<link rel='icon' type='image/png' href='/logo.png' />
		<meta name='generator' content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class='w-screen h-screen relative font-sans'>
		<Sidebar />
		<article class='w-full h-full flex flex-grow flex-col'>
			<nav class='flex items-center justify-between mb-2'>
				<img src='/logo.png' alt='' width='72' height='72' />

				<div class='flex items-center'>
					<span class='font-bold uppercase text-xs mr-2 hidden md:block'
						>menu</span
					>
					<button
						class='btn btn-ghost btn-circle text-blue-700'
						id='open_sidebar'
					>
						<FaBars />
					</button>
				</div>
			</nav>

			<slot />
		</article>
	</body>

	<script>
		const btn = document.getElementById('open_sidebar');

		if (btn) {
			btn.addEventListener('click', () => {
				document.getElementById('sidebar')?.classList.remove('hidden');
			});
		}
	</script>
</html>
